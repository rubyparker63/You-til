<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkBackground"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/calcMainButton"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@color/buttonAccent1"
        android:text="Calculator"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tipCalcMainButton"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:background="@color/buttonAccent2"
        android:text="Tip Calculator"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcMainButton" />

    <Button
        android:id="@+id/conversionMainButton"
        android:layout_width="214dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:background="@color/buttonAccent5"
        android:text="Conversions"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipCalcMainButton" />

    <Button
        android:id="@+id/diceMainButton"
        android:layout_width="207dp"
        android:layout_height="49dp"
        android:layout_marginTop="52dp"
        android:background="@color/buttonAccent4"
        android:text="Dice Roll"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conversionMainButton" />

    <Button
        android:id="@+id/coinMainButton"
        android:layout_width="203dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:background="@color/buttonAccent3"
        android:text="Coin Flip"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diceMainButton" />

</androidx.constraintlayout.widget.ConstraintLayout>